<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">

    <h2 class="text-center">Sign up</h2>
    <p  class="text-center"><small>(*) Field required</small></p>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),builder: BootstrapFormBuilder) do |f| %>
      <%= f.errors %>
      <%= f.label "#{:email}(*)"%>
      <%= f.email_field :email, required: true%>
      <%= f.label "#{:name}(*)"%>
      <%= f.text_field :name, required: true%>
      <%= f.label "#{:lastname}(*)"%>
      <%= f.text_field :lastname, required: true%>
      <%= f.label "#{:docid}(*)"%>
      <%= f.text_field :docid, required: true%>
      <%= f.label "#{:username}(*)"%>
      <%= f.text_field :username, required: true %>
      <%= f.label "#{:pin}(*)"%>
      <%= f.number_field :pin, required: true %>
      <%= f.label "#{:password}(*)"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, required: true %>
      <%= f.label "#{:password_confirmation}(*)"%>
      <%= f.password_field :password_confirmation, required: true %>
      <%= f.label :avatar %>
      <%= f.file_field :avatar%>
      <%= f.hidden_field :role%>
      <div class="text-center">
        <%= f.submit "Sign up"%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>

  </div>
  <div class="col-sm-3"></div>
</div>

